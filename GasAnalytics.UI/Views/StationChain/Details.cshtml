@model GasAnalytics.Models.StationChain

@{
    ViewBag.Title = "Station Chain Detail";
}

<h2>Details</h2>

<div>
    <h4>Station Chain</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @Html.ActionLink("Create New Station", "Create", new { controller = "Station", StationChainId = Model.StationChainId })

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stations.FirstOrDefault().StationNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations.FirstOrDefault().Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations.FirstOrDefault().Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations.FirstOrDefault().City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations.FirstOrDefault().State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations.FirstOrDefault().Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stations.FirstOrDefault().Phone)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Stations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StationNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { controller = "Station", id = item.StationId }) |
                    @Html.ActionLink("Details", "Details", new { controller = "Station", id = item.StationId }) |
                    @Html.ActionLink("Delete", "Delete", new { controller = "Station", id = item.StationId })
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.StationChainId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
